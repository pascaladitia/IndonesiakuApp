<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="18dp"
    android:orientation="vertical"
    tools:context=".view.covid.CovidDetailActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/cocon"
        android:gravity="center"
        android:layout_margin="10dp"
        android:textColor="#F44336"
        android:textSize="20sp"
        android:text="Data Covid Provinsi Indonsesia"/>

      <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:src="@drawable/covid2"/>

    <TextView
        android:id="@+id/detailCovid_nama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/cocon"
        android:gravity="center"
        android:layout_margin="10dp"
        android:textColor="#F44336"
        android:textSize="25sp"
        android:text="Provinsi"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bgg_text"
            android:layout_marginRight="10dp"
            android:padding="8dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_positif"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cocon"
                android:layout_marginTop="10dp"
                android:textSize="20sp"
                android:textColor="#686767"
                android:text="Positif"/>

            <TextView
                android:id="@+id/detailCovid_positif"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:textColor="#F44336"
                android:text="0"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bgg_text"
            android:layout_marginRight="10dp"
            android:padding="8dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_sembuh"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cocon"
                android:layout_marginTop="10dp"
                android:textSize="20sp"
                android:textColor="#686767"
                android:text="Sembuh"/>

            <TextView
                android:id="@+id/detailCovid_sembuh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:textColor="#F44336"
                android:text="0"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bgg_text"
            android:padding="8dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_meninggal"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cocon"
                android:layout_marginTop="10dp"
                android:textSize="20sp"
                android:textColor="#686767"
                android:text="Meninggal"/>

            <TextView
                android:id="@+id/detailCovid_meninggal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:textColor="#F44336"
                android:text="0"/>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/detailCovid_close"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bgg_button"
        android:layout_marginTop="18dp"
        android:textColor="#fff"
        android:fontFamily="@font/cocon"
        android:text="Close" />
</LinearLayout>