<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/detail_image"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:padding="20dp"
        android:src="@drawable/dashboard"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/detail_image"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/dialogDaerah_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="id provinsi"
            android:textColor="#605C5C"/>

        <TextView
            android:id="@+id/dialogDaerah_nama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cocon"
            android:text="Nama"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:textColor="#605C5C"/>

        <Button
            android:id="@+id/dialogDaerah_close"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bgg_button"
            android:text="Close"
            android:layout_marginTop="30dp"
            android:textColor="@android:color/white"/>
    </LinearLayout>

</RelativeLayout>